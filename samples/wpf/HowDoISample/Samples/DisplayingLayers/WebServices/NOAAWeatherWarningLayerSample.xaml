<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.NOAAWeatherWarningLayerSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ThinkGeoUI="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ThinkGeoUI:MapView x:Name="mapView" Loaded="MapView_Loaded" MapClick="mapView_MapClick"></ThinkGeoUI:MapView>
        <Image x:Name="loadingImage" Visibility="Visible" Height="64" Width="64" gif:ImageBehavior.AnimatedSource="..\..\..\Resources\loading.gif" />
    </Grid>
</UserControl>
