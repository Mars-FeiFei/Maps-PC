<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.CadLayerSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <thinkGeoUi:MapView x:Name="MapView" Loaded="MapView_Loaded" MapUnit="Meter"></thinkGeoUi:MapView>
        <RadioButton x:Name="EmbeddedStyling" Content="DWG-Embedded Styling" HorizontalAlignment="Left" Margin="87,10,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="grpStyling" Checked="EmbeddedStyling_Checked"/>
        <RadioButton x:Name="ProgrammaticStyling" Content="Standard Programmatic Styling" HorizontalAlignment="Left" Margin="87,30,0,0" VerticalAlignment="Top" GroupName="grpStyling" Checked="ProgrammaticStyling_Checked"/>
    </Grid>
</UserControl>