<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.Misc.ShapesAcrossDateLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wpf="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThinkGeo.UI.Wpf.HowDoI.Misc"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <wpf:MapView x:Name="mapView" Loaded="MapView_Loaded"/>
        <Image x:Name="NorthImage" Height="50" Width="50" VerticalAlignment="Top" HorizontalAlignment="Right" 
               Margin="0, 10, 10, 0" Source="D:\Source\thinkgeosdk\WpfApp1\NorthArrow.png" 
               RenderTransformOrigin=".5, .5" MouseDown="NorthImage_OnMouseDown">
            <Image.RenderTransform>
                <RotateTransform x:Name="RotateTransformAngle"></RotateTransform>
            </Image.RenderTransform>
        </Image>
    </Grid>
</UserControl>
