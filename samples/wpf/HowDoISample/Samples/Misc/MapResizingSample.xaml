<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.Misc.MapResizingSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc1="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
        xmlns:local="clr-namespace:ThinkGeo.UI.Wpf.HowDoI.Misc"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <uc1:MapView  x:Name="mapView" Loaded="MapView_Loaded" SizeChanged="MapView_SizeChanged"
                          CurrentExtentChanging="MapView_CurrentExtentChanging" CurrentScaleChanging="MapView_CurrentScaleChanging" 
                          CurrentExtentChanged="MapView_CurrentExtentChanged" CurrentScaleChanged="MapView_CurrentScaleChanged"/>
    </Grid>
</UserControl>
